<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TestsFragment">

    <TextView
        android:id="@+id/lectures_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tests_button_desc"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"/>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:contentDescription="@string/test_scrollview_desc">

        <LinearLayout
            android:id="@+id/lecture_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Введение в Java"
                android:textSize="16sp"
                android:autoLink=""
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Установка JDK"
                android:textSize="16sp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>