<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TestsFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/accentLight"
        app:title="@string/tests_button_desc"
        app:titleTextColor="@color/white" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:contentDescription="@string/test_scrollview_desc">

        <LinearLayout
            android:id="@+id/lecture_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lecture1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Введение в Java"
                android:textSize="16sp"
                android:autoLink=""
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/lecture2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Установка JDK"
                android:textSize="16sp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>